{
  "name": "trello-nodejs",
  "version": "1.0.0",
  "description": "A Trello clone backend NodeJs with TypeScript",
  "author": "Khang Nguyen",
  "license": "ISC",
  "main": "server.js",
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "tsc --project tsconfig.build.json && tsc-alias",
    "prestart": "npm run clean && npm run build",
    "start": "node ./dist/server.js",
    "dev": "nodemon --config nodemon.json src/server.ts",
    "type:check": "tsc --noEmit",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "nodemon": "^3.1.11",
    "rimraf": "^6.1.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ngkhang/trello-nodejs.git"
  },
  "keywords": [
    "NodeJs",
    "ExpressJS",
    "TypeScript",
    "backend"
  ],
  "homepage": "https://github.com/ngkhang/trello-nodejs#readme"
}
