{
  "name": "trello-nodejs",
  "version": "1.0.0",
  "description": "A Trello clone backend NodeJs with TypeScript",
  "author": "Khang Nguyen",
  "license": "ISC",
  "main": "server.js",
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "tsc --project tsconfig.build.json && tsc-alias",
    "prestart": "npm run clean && npm run build",
    "start": "cross-env NODE_ENV=production node ./dist/server.js",
    "dev": "cross-env NODE_ENV=development nodemon --config nodemon.json src/server.ts",
    "type:check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format:check": "prettier . --check",
    "format": "prettier . --write",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky || true",
    "commit": "git-cz"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "joi": "^18.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/cz-commitlint": "^20.1.0",
    "@eslint/js": "^9.39.1",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "commitizen": "^4.3.1",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "inquirer": "^9.3.8",
    "lint-staged": "^16.2.7",
    "nodemon": "^3.1.11",
    "prettier": "^3.6.2",
    "rimraf": "^6.1.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ngkhang/trello-nodejs.git"
  },
  "keywords": [
    "NodeJs",
    "ExpressJS",
    "TypeScript",
    "backend"
  ],
  "homepage": "https://github.com/ngkhang/trello-nodejs#readme"
}
